{
  "name": "back-countries",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "9.3.9",
    "@sap/cds": ">=5",
    "@sap/cds-dk": "^4.4.1",
    "@sap/hana-client": "2.15.22",
    "cds-routing-handlers": "^3.0.5",
    "reflect-metadata": "^0.1.13",
    "express": "^4",
    "hdb": "^0.19.0",
    "@sap/xssec": "^3",
    "passport": "^0",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4",
    "@types/express": "^4.17.12",
    "cds2types": "^2.6.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "node ./srv/server.js",
    "dev": "npm run build:cds && nodemon",
    "deploy": "cds deploy --to sqlite:bookshop.db",
    "build": "npm run build:cds && npm run build:ts",
    "build:cds": "echo 'Compiling cds sources...' && cds2types --cds ./srv/countries-service.cds --output ./src/entities.ts --prefix I -f && cds build",
    "build:ts": "echo 'Compiling *.ts sources...' && tsc"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        },
        "approuter": {
          "kind": "cloudfoundry"
        }
      },
      "db": {
        "kind": "sql"
      }
    }
  }
}
