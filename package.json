{
  "name": "back-countries",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": ">=5",
    "@sap-cloud-sdk/core": "1.54.2",
    "@sap/cds-dk": "^4.4.1",
    "@sap/hana-client": "2.15.22",
    "@sap/xssec": "^3",
    "cds-routing-handlers": "^3.0.5",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "7.8.0",
    "source-map-support": "^0.5.21",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4",
    "cds2types": "^2.6.1",
    "nodemon": "^2.0.7",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "start": "node ./gen/srv/srv/main.js",
    "dev": "npm run build:cds && nodemon",
    "deploy": "cds deploy --to sqlite:bookshop.db",
    "build": "npm run build:cds && npm run build:ts",
    "build:cds": "echo 'Compiling cds sources...' && cds2types --cds ./srv/countries-service.cds --output ./src/entities.ts --prefix I -f && cds build",
    "build:ts": "echo 'Compiling *.ts sources...' && tsc"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        },
        "approuter": {
          "kind": "cloudfoundry"
        }
      },
      "db": {
        "kind": "sql"
      }
    }
  }
}
